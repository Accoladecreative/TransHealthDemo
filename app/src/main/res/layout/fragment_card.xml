<?xml version="1.0" encoding="utf-8"?>
       <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".uiComponent.ScheduleCard">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="162dp"

        android:layout_marginBottom="20dp"
        android:padding="20dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue" >

            <TextView
                android:textColor="@color/white"
                android:id="@+id/post_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:text="Date"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />



            <TextView
                android:textColor="@color/white"
                android:id="@+id/tv_consultant_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="Health issue"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView

                android:textColor="@color/white"
                android:id="@+id/tv_consultant_categories"
                android:layout_width="0dp"
                style="@drawable/edit_text_ui"
                android:layout_height="50dp"

                android:layout_marginTop="12dp"
                android:padding="2dp"
                android:text="Description"
                app:layout_constraintBottom_toTopOf="@+id/post_user_id"
                app:layout_constraintEnd_toEndOf="@+id/tv_consultant_name"
                app:layout_constraintStart_toStartOf="@+id/tv_consultant_name"
                app:layout_constraintTop_toBottomOf="@id/tv_consultant_name"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:textColor="@color/white"
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="152dp"
                android:text="Status:"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/post_id"
                app:layout_constraintTop_toBottomOf="@+id/tv_consultant_categories"
                app:layout_constraintVertical_bias="0.552" />

            <TextView
                android:textColor="@color/white"
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Awaiting"
                app:layout_constraintBottom_toBottomOf="@+id/textView6"
                app:layout_constraintStart_toEndOf="@+id/textView6"
                app:layout_constraintTop_toTopOf="@+id/textView6" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
</FrameLayout>


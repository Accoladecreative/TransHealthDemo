<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:backgroundTint="@color/light_blue"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".uiComponent.DrugFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/drug_card_1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="4sp"
        android:layout_margin="24dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="10dp">

            <ImageView
                android:id="@+id/drug_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/drug_1"
                app:layout_constraintBottom_toTopOf="@+id/drug_1_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@id/drug_1_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"

                android:text="CyproFlavin Cyrup"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/drug_1_price"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView

                android:id="@id/drug_1_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="$8"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/drug_1_name" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>